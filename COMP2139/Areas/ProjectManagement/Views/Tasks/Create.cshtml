@model COMP2139_Labs.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewData["Title"] = "Create Task";
}

<h2>Create Task</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Validation error:</strong> Please correct the form.
    </div>
}

<form asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ProjectId" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<!-- Updated to include the area in the route -->
<a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to List</a>
