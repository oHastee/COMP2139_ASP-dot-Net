@model COMP2139_Labs.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewData["Title"] = "Delete Task";
}

<style>
    .delete-task-container {
        background-color: #fff;
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        max-width: 700px;
        margin: 5vh auto;
    }

    .delete-heading {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 30px;
        color: #dc3545; /* Intense color to convey urgency */
    }

    .delete-warning {
        color: #dc3545;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 35px;
    }

    .task-info {
        background-color: #f2f2f2;
        padding: 25px;
        border-left: 5px solid #dc3545;
        border-radius: 8px;
        margin-bottom: 40px;
    }

        .task-info dt {
            font-size: 1.2rem;
            color: #555;
        }

        .task-info dd {
            font-size: 1.4rem;
            color: #222;
            margin-bottom: 15px;
        }

    .action-buttons {
        margin-top: 35px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-danger-custom, .btn-secondary-custom {
        font-size: 1.2rem;
        padding: 12px 30px;
        border-radius: 8px;
        transition: background-color 0.3s, border-color 0.3s, color 0.3s;
    }

    .btn-danger-custom {
        background-color: #dc3545;
        color: #fff;
        border: 2px solid transparent;
    }

        .btn-danger-custom:hover, .btn-danger-custom:focus {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary-custom {
        background-color: #6c757d;
        color: #fff;
        border: 2px solid transparent;
    }

        .btn-secondary-custom:hover, .btn-secondary-custom:focus {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<div class="delete-task-container">
    <h1 class="delete-heading">Delete Task</h1>
    <p class="delete-warning">Are you sure you want to delete this task?</p>
    <dl class="task-info">
        <dt>Title</dt>
        <dd>@Model.Title</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>
    <div class="action-buttons">
        <!-- Ensure asp-route-id is correctly set for the DeleteConfirmed action -->
        <form asp-area="ProjectManagement" asp-controller="Tasks" asp-action="DeleteConfirmed" asp-route-id="@Model.ProjectTaskId" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger-custom">Confirm Delete</button>
        </form>
        <a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary-custom">Cancel</a>
    </div>
</div>
