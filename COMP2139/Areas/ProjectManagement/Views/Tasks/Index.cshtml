@model List<COMP2139_Labs.Areas.ProjectManagement.Models.ProjectTask>
@{
    ViewData["Title"] = "Tasks List";
    var projectId = ViewBag.ProjectId;
}

<style>
    .task-table th, .task-table td {
        vertical-align: middle;
    }

    .btn-custom {
        margin-right: 5px;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Tasks List</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover task-table">
                <thead class="table-dark">
                    <tr>
                        <th>Task ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Project ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProjectTaskId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.ProjectId)</td>
                            <td>
                                <a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Details" asp-route-id="@item.ProjectTaskId" class="btn btn-info btn-custom">Details</a>
                                <a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Edit" asp-route-id="@item.ProjectTaskId" class="btn btn-secondary btn-custom">Edit</a>
                                <a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Delete" asp-route-id="@item.ProjectTaskId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Create" asp-route-projectId="@projectId" class="btn btn-primary">Add New Task</a>
        <a asp-area="ProjectManagement" asp-controller="Project" asp-action="Index" class="btn btn-secondary">Back to Projects</a>
    }
    else
    {
        <p>No Tasks Available</p>
    }
</div>
