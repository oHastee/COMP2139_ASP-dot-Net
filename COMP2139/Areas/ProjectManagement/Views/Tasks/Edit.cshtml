@model COMP2139_Labs.Areas.ProjectManagement.Models.ProjectTask
@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden input for ProjectTaskId -->
    @Html.HiddenFor(model => model.ProjectTaskId)

    <!-- Hidden input for ProjectId to ensure the task stays related to its project -->
    @Html.HiddenFor(model => model.ProjectId)

    <!-- Input field for Title -->
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Input field for Description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
