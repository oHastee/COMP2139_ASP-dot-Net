@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<style>
    .navbar-custom .nav-link, .navbar-custom .navbar-brand, .navbar-custom .form-select, .navbar-custom .form-control, .navbar-custom .btn {
        font-size: 1.1rem; /* Increase font size */
        padding: 0.5rem 1rem; /* Adjust padding for better spacing */
    }

    .navbar-custom .form-select, .navbar-custom .form-control {
        padding: 0.375rem 0.75rem; /* Adjust form elements to match bootstrap's default sizing with larger text */
    }

    .navbar-custom .nav-link i, .navbar-custom .navbar-brand i {
        margin-right: 0.5rem; /* Space out icons from text */
    }

    .navbar-custom {
        font-weight: 500; /* Make text slightly bolder for better readability */
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 navbar-custom">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-graduation-cap"></i> COMP2139_Labs</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About"><i class="fas fa-info-circle"></i> About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="ProjectManagement" asp-controller="Project" asp-action="Index"><i class="fa-solid fa-list-check"></i> Projects</a>
                </li>
            </ul>

            <form class="d-flex align-items-center me-2" method="get" asp-controller="Home" asp-action="GeneralSearch">
                <select class="form-select mr-2" name="searchType" style="width: auto;">
                    <option value="Projects">Projects</option>
                    <option value="Tasks">Tasks</option>
                </select>
                <input class="form-control mr-2" type="search" placeholder="Search" aria-label="Search" name="searchString">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>

            @if (SignInManager.IsSignedIn(User))
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Your Account"><i class="fa fa-user-circle"></i> Profile</a>
                    </li>
                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                            <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                        </form>
                    </li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in-alt"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-user-plus"></i> Register</a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>
