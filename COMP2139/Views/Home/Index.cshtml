@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">

<style>
    body {
        background-color: #f8f9fa; /* Light gray background for a subtle, modern look */
        overflow: hidden; /* Prevents scrolling by hiding overflow */
    }

    .welcome-message {
        padding: 2rem 1rem; /* Reduced padding to accommodate larger text without scrolling */
        background: white; /* White background for the text area */
        box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Soft shadow for depth */
        border-radius: 0.5rem; /* Rounded corners for the container */
        margin: 10vh auto; /* Centers the container with vertical margin based on viewport height */
        max-width: 800px; /* Max width for the container */
    }

        .welcome-message h1 {
            font-size: 3rem; /* Significantly larger font size for the main title */
            margin-bottom: 0.5rem; /* Reduced spacing below the title */
        }

        .welcome-message p {
            font-size: 1.5rem; /* Larger font size for paragraph, comfortable for reading without scrolling */
        }
</style>

<div class="container">
    <div class="welcome-message text-center">
        <h1>Welcome to COMP2139 Labs</h1>
        <p>Welcome to my page. Here you can find my projects and their tasks. You can also find information about me.</p>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
