@model List<Project>
@{
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <!-- Link to view details -->
                        <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-info">Details</a> |

                        <!-- Link to edit -->
                        <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-secondary">Edit</a> |

                        <!-- Link to delete -->
                        <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger">Delete</a> |

                        <!-- Link to view tasks associated with the project -->
                        <a asp-action="Index" asp-controller="Tasks" asp-route-projectId="@project.ProjectId" class="btn btn-warning">View Tasks</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="Create">Create New Project</a> <!-- Link to create a new project -->
}
else
{
    <p>No Projects Available</p>
    <a class="btn btn-primary" asp-action="Create">Create New Project</a> <!-- Link to create a new project -->
}

